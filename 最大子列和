#include<stdio.h>

int FindMaxSum( int *a,int max)
{
	int i,j,MaxSum,ThisSum;
	MaxSum = ThisSum = 0;
	
	for( i = 1; i < max; i++ ){
		ThisSum = 0;
		for ( j = i; j < max; j++ ){
			ThisSum += a[j];
			if ( ThisSum > MaxSum ){
				MaxSum = ThisSum;
			} 
		}
	}
	return MaxSum;
 } 
 
 int main()
 {
 	int max ,i;
 	int *L;
 	
	scanf("%d", &max);
	L = ( int *)malloc( (max+1) * sizeof(int));
	for ( i = 1;  i<(max+1); i++){
		scanf("%d",&L[i]);
	}
	printf("%d",FindMaxSum( L , max));
	return 0;
 }
